'use strict';

angular.module('beakerApp')
  .config(['$routeProvider', '$locationProvider',
    function($routeProvider, $locationProvider) {
      $locationProvider.html5Mode(true);

      $routeProvider
        .when('/', {
          templateUrl: '<%= path_to_asset("static_pages/homepage.html") %>',
          controller: 'HomepageCtrl'
        })
        .when('/signin', {
          templateUrl: '<%= path_to_asset("sessions/new.html") %>',
          controller: 'NewSessionCtrl'
        })
        .when('/signout', {
          template: '',
          controller: 'DestroySessionCtrl'
        })
        .when('/signup', {
          templateUrl: '<%= path_to_asset("users/new.html") %>',
          controller: 'NewUserCtrl'
        });
    }
  ]);
